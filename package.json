{
  "name": "@auraos/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "AuraOS - Complete Operating System with AI Integration",
  "author": "Mohamed Abdelaziz",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:desktop": "cd packages/ui && npm run dev",
    "dev:terminal": "cd apps/terminal && npm run dev",
    "dev:debugger": "cd apps/debugger && npm run dev",
    "build": "pnpm -r build",
    "build:desktop": "./scripts/build-desktop.sh",
    "build:terminal": "cd apps/terminal && npm run build",
    "build:debugger": "cd apps/debugger && npm run build",
    "build:analyze": "ANALYZE=true pnpm build",
    "build:production": "NODE_ENV=production pnpm build",
    "deploy": "./scripts/deploy-desktop.sh",
    "test": "pnpm -r test",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config test.config.js",
    "test:e2e": "playwright test",
    "test:performance": "playwright test --grep @performance",
    "test:autopilot": "playwright test --grep @autopilot",
    "test:learning": "playwright test --grep @learning",
    "test:mcp": "vitest run --grep mcp",
    "test:apps": "vitest run --grep apps",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:all": "node scripts/run-tests.js",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck",
    "performance": "node scripts/performance-analysis.js",
    "bundle:analyze": "npx webpack-bundle-analyzer dist/bundle-stats.json",
    "memory:profile": "node --inspect scripts/memory-profiler.js",
    "optimize": "node scripts/optimize-bundle.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "zustand": "^4.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@playwright/test": "^1.55.1"
  },
  "pnpm": {
    "overrides": {
      "request": "npm:@cypress/request@^3.0.0",
      "tough-cookie": "^4.1.3"
    }
  }
}
