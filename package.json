{
  "name": "@auraos/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "AuraOS - Complete Operating System with AI Integration",
  "author": "Mohamed Abdelaziz",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:desktop": "cd packages/ui && npm run dev",
    "build": "pnpm -r build",
    "build:desktop": "./scripts/build-desktop.sh",
    "deploy": "./scripts/deploy-desktop.sh",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "zustand": "^4.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
